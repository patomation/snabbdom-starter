{
  "extends": "tsconfigs/browser-executable",
  "compilerOptions": {
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "snabbdom/*": ["node_modules/snabbdom/build/package/*"]
    }
  },
  "include": [
    "src/**/*",
    "src/types/*.d.ts"
  ],
  "exclude": [
    "src/**/*.test.ts"
  ]
}