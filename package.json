{
  "name": "vanilla-starter",
  "version": "0.0.0",
  "description": "Javascript + Webpack vanilla starter project",
  "main": "src/index.ts",
  "scripts": {
    "start": "webpack-dev-server --config webpack.dev.config.js --hot --open",
    "compile:tests": "tsc --project tsconfig.test.json",
    "compile:app": "tsc --project tsconfig.json",
    "compile": "run-s compile:tests compile:app",
    "build": "webpack --config webpack.prod.config.js",
    "lint": "./node_modules/.bin/eslint **/*.{js,ts,tsx}",
    "unit": "ava",
    "unit:coverage": "nyc ava",
    "test": "run-s lint compile:tests unit",
    "coverage": "run-s lint compile unit:coverage"
  },
  "keywords": [
    "typescript",
    "webpack"
  ],
  "author": "Patrick Kelly",
  "license": "ISC",
  "ava": {
    "files": [
      "build/**/*.test.js"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint --config commitlint.config.json -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run lint && npm run test"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "9.1.2",
    "@commitlint/config-conventional": "11.0.0",
    "@types/webpack-env": "1.15.2",
    "@typescript-eslint/eslint-plugin": "4.1.0",
    "@typescript-eslint/parser": "4.1.0",
    "ava": "3.12.1",
    "css-loader": "4.3.0",
    "eslint": "7.9.0",
    "eslint-config-standard": "14.1.1",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.0.1",
    "file-loader": "6.1.0",
    "html-webpack-plugin": "4.4.1",
    "husky": "4.3.0",
    "node-sass": "4.14.1",
    "npm-run-all": "4.1.5",
    "nyc": "15.1.0",
    "sass-loader": "10.0.2",
    "style-loader": "1.2.1",
    "title-case": "3.0.2",
    "ts-loader": "8.0.3",
    "ts-node": "9.0.0",
    "tsconfigs": "5.0.0",
    "typescript": "4.0.2",
    "webpack": "4.44.1",
    "webpack-cli": "3.3.12",
    "webpack-dev-server": "3.11.0",
    "webpack-merge": "5.1.4"
  },
  "dependencies": {
    "snabbdom": "1.0.1"
  }
}
